.SubWrapper
  = render partial: "posts/SubHeader"
  .Main-sessions 
    .Main-sessions__content
      %p アカウントをお持ちでない方はこちら
      = link_to new_user_registration_path, class: 'Main-sessions__content__btn Main-sessions__content__btn--new' do
        新規会員登録
    
    .Main-sessions__line      
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: 'Main-sessions__line__btn Main-sessions__line__btn--google' do
        = icon("fab", "google", class: 'Main-sessions__line__btn--google__icon')
        Googleでログイン
      = link_to user_facebook_omniauth_authorize_path, method: :post, class: 'Main-sessions__line__btn Main-sessions__line__btn--facebook' do
        = icon("fab", "facebook-square", class: 'Main-sessions__line__btn--facebook__icon')
        Facebookでログイン
      = link_to "#", class: 'Main-sessions__line__btn Main-sessions__line__btn--apple' do
        = icon("fab", "apple", class: 'Main-sessions__line__btn--apple__icon')
        Appleでログイン

    .Main-sessions__inputform
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :email, style: "visibility:hidden"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "Main-sessions__inputform--email"
        .field
          = f.label :password, style: "visibility:hidden"
          %br/
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "Main-sessions__inputform--password"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "ログイン", class: "Main-sessions__inputform--btn"
      -# = render "devise/shared/links"
  = render partial: "posts/SubFooter"